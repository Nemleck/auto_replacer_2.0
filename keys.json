{
    "global_params": {
        "max_keys": 50,
        "default_config_params": {
            "keep_text": false,
            "case_sensitive": true,
            "separator": null,
            "operation": null
        }
    },
    
    "special_keys": {
        "end": "²end",
        "reload": "²r",
        "on": "²on",
        "off": "²off",
        "hey": "²hey",
        "clear": "²clear"
    },

    "external_keys": [],

    "keys": [
        {
            "input": "²sent1",
            "output": "This is an example of registered sentences !",
            "params": {
                "case_sensitive": false
            }
        },
        {
            "input": "²like{food}",
            "output": "It seems that you like {food}",
            "params": {
                "separator": "{}"
            }
        },
        {
            "input": "²search{theme}",
            "output": "Voici ce que j'ai trouvé sur le wiki à propos de {theme} :\n{part1}\n{part2}",
            "params": {
                "separator": "{}",
                "operation": {
                    "result": "get_wiki_info('{theme}')",
                    "part1": "{result}[0]",
                    "part2": "{result}[1]"
                }
            }
        },
        {
            "input": "²select_all",
            "output": ["ctrl", "a", "c"]
        },
        {
            "input": ["esc"],
            "output": "echapped !"
        },
        {
            "input": "²calc(op)",
            "output": "(op) = (result)",
            "params": {
                "separator": "()",
                "operation": {
                    "result": "(op)"
                }
            }
        }
    ]
}